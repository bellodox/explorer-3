<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %> - BlockExplorer</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <a href="/">Home</a>
      <a href="/contact">Contact</a>
      <%= form_tag({:action=>"search", :controller=>"application"},{:method=>"post"}) do %>
        <%= search_field_tag 'query' %>
        <%= button_tag 'Search' %>
      <% end %>
    </header>
    <article>
      <% if @debug_mode %>
        <%= @output %>
      <% end %>
      <%= yield %>
    </article>
    <footer>
      <a href="https://github.com/tfreedman/explorer">Source</a>
    </footer>
  </body>
</html>
